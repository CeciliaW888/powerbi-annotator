{
  "manifest_version": 3,
  "name": "Web Annotator",
  "version": "1.2.0",
  "description": "Add annotations and comments to any website with a sidebar. Features: 5 drawing tools, color picker, Excel export, PDF/PPT export. Originally designed for Power BI.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://app.powerbi.com/*",
    "https://*.powerbi.com/*",
    "file:///*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://app.powerbi.com/*",
        "https://*.powerbi.com/*",
        "file:///*",
        "<all_urls>"
      ],
      "js": ["src/lib/pptxgen.bundle.js", "src/lib/jspdf.umd.min.js", "src/content/content.js"],
      "css": ["src/content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Toggle Annotator"
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
